{
	"name": "packedge",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prepare": "husky install",
		"commit": "git-cz",
		"commit:all": "git add . && git-cz"
	},
	"validate-branch-name": {
		"pattern": "^(main|development|develop|staging){1}$|^(feat|fix|hotfix|release|chore)/.+$",
		"errorMsg": "Please, set a valid branch name."
	},
	"git-precommit-checks": {
		"display": {
			"offendingContent": true,
			"shortStats": true
		},
		"rules": [
			{
				"nonBlocking": "true",
				"message": "You've got leftover `console.log`",
				"regex": "^(?!.*//).*console\\.log\\("
			},
			{
				"message": "You've got leftover conflict markers",
				"regex": "/^[<>|=]{4,}/m"
			},
			{
				"filter": "^(?!package\\.json$)",
				"message": "You have unfinished developments",
				"nonBlocking": "true",
				"regex": "/(?:FIXME|TODO)/i"
			}
		]
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:atomic-incubator/packedge.git"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.3.2",
		"@radix-ui/react-slot": "^1.0.2",
		"browser-image-compression": "^2.0.2",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"edge-csrf": "^1.0.5",
		"jsonwebtoken": "^9.0.2",
		"lucide-react": "^0.287.0",
		"mongoose": "^7.6.2",
		"next": "13.5.4",
		"next-auth": "^4.23.2",
		"next-nprogress-bar": "^2.1.2",
		"react": "^18",
		"react-dom": "^18",
		"react-hook-form": "^7.47.0",
		"resend": "^1.1.0",
		"swr": "^2.2.4",
		"tailwind-merge": "^1.14.0",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.8.0",
		"@commitlint/config-conventional": "^17.8.0",
		"@commitlint/cz-commitlint": "^17.8.0",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"autoprefixer": "^10",
		"commitizen": "^4.3.0",
		"eslint": "^8.51.0",
		"eslint-config-next": "13.5.4",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"git-precommit-checks": "^3.1.0",
		"husky": "^8.0.0",
		"lint-staged": "^15.0.2",
		"postcss": "^8",
		"tailwindcss": "^3",
		"typescript": "^5",
		"validate-branch-name": "^1.3.0"
	}
}
